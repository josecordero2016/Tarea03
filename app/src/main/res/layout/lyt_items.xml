<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="271dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="73dp"
        android:layout_weight="1"
        android:text="Teléfono"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="225dp"
        android:layout_weight="1"
        android:text="Horarios:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lblHorarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="159dp"
        android:layout_weight="1"
        android:text="1AM - 12PM"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="271dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="7dp"
        android:layout_weight="1"
        android:text="0980178888"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_weight="1"
        android:text="Item 1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:text="Categoría"
        android:textSize="10sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/lblCategoria"
        android:layout_alignParentStart="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/lblCategoria"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="-1dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>