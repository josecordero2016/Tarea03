<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/lblCategoria"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:text="Categoría"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:text="Item 1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/lblCategoria"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="-1dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#7E370000"
        android:foregroundTint="#94BF1616" />

    <TextView
        android:id="@+id/lblHorarios"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="116dp"
        android:layout_weight="1"
        android:text="1AM - 12PM"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:text="0980178888"
        android:textColor="#3F51B5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="31dp"
        android:layout_weight="1"
        android:text="Teléfono:"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="98dp"
        android:background="#FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="113dp"
        android:layout_weight="1"
        android:text="Horarios:"
        android:textSize="10sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/lblCategoria"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="10dp"
        android:layout_height="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="39dp"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="69dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

</RelativeLayout>